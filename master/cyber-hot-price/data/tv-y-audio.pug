									.bg-image.centervh
									img.centerv(alt='', src!= base_url + 'productos/TV-VIDEOJUEGO_02.png')

				// Slide TV - AUDIO 2
				.slide
					img.logo-campaign.centerh(src!= base_url + 'assets/logo-campaign.png')
