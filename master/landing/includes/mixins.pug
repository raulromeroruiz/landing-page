mixin picture(img)
	- img = img
	- file = img.match(/(jpg|png)/);
	- type = (file[0] == "jpg") ? "images/jpg":"images/png";
	picture
		source(srccet!='images/' + img.replace(/(jpg|png)/, 'webp') type!='images/webp')
		source(srccet!='images/' + img type!=type)
		img(src!='images/' + img)

mixin banner(params)
	- attr = params
	.banner&attributes(attr)

mixin bannerv(params, src)
	- attrb = params
	- attri = src
	.bannerv&attributes(attrb)
		img&attributes(attri)

mixin bannervideo(params, src)
	- attrb = params
	- attri = src
	.bannerv&attributes(attrb)
		video(autoplay='autoplay', loop='loop', preload, muted)&attributes(attri)
		.overlay.centervh

mixin video(params, src)
	- attr = params
	- attri = src
	.video&attributes(attr)
		video(autoplay='autoplay', loop='loop', preload, muted)&attributes(attri)
	.overlay.centervh

mixin youtube(params)
	- attr = params
	.youtube.centervh
		iframe(frameborder='0', height='100%', width='100%', id='video-intro')&attributes(attr)
		.overlay.centervh

