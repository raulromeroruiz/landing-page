/* CSS BC */
#cyber
	a
		outline none
	.row 
		width 100%
		margin 0
	#sponsor-bc
		width 100%
		height 306px
		margin 0 auto
		overflow hidden
		/* background transparent url(../images/sponsor.jpg) center top no-repeat */
		position relative
	#slider-bc 
		height 292px
		width 510px
		float right
		clear both
		margin-bottom 0 !important
	.banner-slider 
		width 510px
		height 306px
		float right
		display -ms-flexbox
		display -webkit-flex
		display flex
		-ms-flex-align center
		-webkit-align-items center
		-webkit-box-align center
		-moz-box-align center
		align-items center
		justify-content center
		.slick-prev
			width 18px
			height 34px
			&::before
				width 18px
				height 34px
		.slick-next
			width 18px
			height 34px
			&::before
				width 18px
				height 34px
	.nav 
		clear both
		width 1110px
		margin 0 auto
		-webkit-transition all 0.25s ease 0s
		-moz-transition all 0.25s ease 0s
		transition all 0.25s ease 0s
	.menu 
		width 100%
		margin 1px auto 0
		list-style-type none
		font-size 0
		padding 0
		li 
			display inline-block
			position relative
			line-height 40px
			width 20%
	.item 
		height 100%
		width 510px
		height 292px
		float left
		position relative
		outline none
		img 
			display block
	.call 
		width 510px
		float right
		height auto
		min-height 292px
		position relative
	.call-image 
		margin 67px 93px 0
	.product 
		width 703px
		float left
	.image 
		width 510px
		height 292px
		float left
		position relative
		img 
			margin 0 auto
	.icon 
		background-image url(../images/master.png)
		background-repeat no-repeat
		height 26px
		width 30px
		margin-right 4px
		float left
		background-position-y bottom
	.category 
		background-color #f3f3f3
		padding 0 5px
		font-size 12px
		height 40px
		display block
		line-height 40px
		text-decoration none
		display -ms-flexbox
		display -webkit-flex
		display flex
		-ms-flex-align center
		-webkit-align-items center
		-webkit-box-align center
		-moz-box-align center
		align-items center
		justify-content center
		span 
			color #454545
			line-height 1
			float left
		.text 
			height auto
			text-align center
			position relative
			font-size 15px
		&::after 
			content ''
			background #c2c2c2
			width 1px
			height 18px
			position absolute
			top 8px
			right 0
			transform translate(-50%,0)
			&:last-child 
				display none
		&:hover 
			.text 
				&:after 
					border-color white
		.one 
			margin-top 18px
		.icon 
			/* display none */

	#btn-videojuegos .category::after, .active::after 
		display none
	.active 
		.text 
			&:after 
				border-color white
	.category:hover, .active 
		background-color #cd5e5d
		color white
	.category:hover span, .active span 
		color white
	#btn-tv-video 
		.category 
			.icon 
				background-position 7px bottom
	#btn-audio 
		.category 
			.icon 
				background-position -34px bottom
	#btn-computo 
		.category 
			.icon 
				background-position -81px bottom
				width 36px
	#btn-tablets 
		.category 
			.icon 
				background-position -134px bottom
	#btn-accesorios-tech 
		.category 
			.icon 
				background-position -178px bottom
				width 36px
	#btn-linea-blanca 
		.category 
			.icon 
				background-position -268px bottom
	#btn-electrodomesticos 
		.category 
			.icon 
				background-position -319px bottom
	#btn-celulares 
		.category 
			.icon 
				background-position -370px bottom
	#btn-videojuegos 
		.category 
			.icon 
				background-position -418px bottom
	#btn-tv-video .category:hover .icon, #btn-tv-video .active .icon 
		background-position 7px top
	#btn-audio .category:hover .icon, #btn-audio .active .icon 
		background-position -34px top
	#btn-computo .category:hover .icon, #btn-computo .active .icon 
		background-position -81px top
	#btn-tablets .category:hover .icon, #btn-tablets .active .icon 
		background-position -134px top
	#btn-accesorios-tech .category:hover .icon, #btn-accesorios-tech .active .icon 
		background-position -178px top
	#btn-linea-blanca .category:hover .icon, #btn-linea-blanca .active .icon 
		background-position -268px top
	#btn-electrodomesticos .category:hover .icon, #btn-electrodomesticos .active .icon 
		background-position -319px top
	#btn-celulares .category:hover .icon, #btn-celulares .active .icon 
		background-position -370px top
	#btn-videojuegos .category:hover .icon, #btn-videojuegos .active .icon 
		background-position -418px top
	#btn-mobilee
		display none
		padding 10px
		width 40px
		height 40px
		top 20px
		position absolute
		right 10px
		z-index 999
		background #fff
		border-radius 50%
		border none
		outline none
		&::before 
			content "Ver categorÃ­as >"
			display block
			font-family "Open Sans", sans-serif
			font-size 12px
			left -100px
			position absolute
			top 12px
			width 100px
			color black
			-webkit-animation abefore 3s linear infinite
			animation abefore 3s linear infinite
			text-shadow 0 1px 1px #fff
		span 
			display block
			clear both
			width 20px
			margin 0 auto 5px
			background #363636
			border-radius 5px
			display block
			height 3px
			position relative
			-webkit-transition all 0.25s ease 0s
			-moz-transition all 0.25s ease 0s
			transition all 0.25s ease 0s

	.collapse-movil 
		/* height 380px !important */
		#main-menu 
			margin-top 0px !important
			// padding-top 50px
		#btn-mobile 
			span 
				&:nth-child(1) 
					-webkit-transform rotate(45deg) translateY(6px) translateX(4px)
					transform rotate(45deg) translateY(6px) translateX(4px)
				&:nth-child(3) 
					-webkit-transform rotate(-45deg) translateY(-6px) translateX(4px)
					transform rotate(-45deg) translateY(-6px) translateX(4px)
				&:nth-child(2) 
					opacity 0
			&::before 
				display none

	.area 
		position absolute
		display block
		img 
			width auto !important
			height auto !important
	#area1 
		bottom 19%
		right -1px
	#area2 
		bottom 2%
		right -1px
	.view-catalog 
		top 240px
		left -8px
	
